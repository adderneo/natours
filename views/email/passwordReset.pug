extends baseEmail

block content

    p Hi #{firstName},
        p Forgot your password, click on the below link or button with your new password and Confirm Password to reset your password: #{url}
        table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
                tr
                    td(align='left')
                        table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                            tbody
                                tr
                                    td
                                        a(href=`${url}`, target='_blank') Reset Your Password
        p If you did not change your password then ignore this email.
        p - Natours